<div class="flex min-h-full flex-col mx-auto justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <%= image_tag asset_path("ouray-teacher-fund-logo-96.png"), alt: "OTF logo", class: "mx-auto h-18 w-auto" %>
    <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Sign in to bid</h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_with model: @user, url: session_path, method: :post, class: "space-y-6" do |form| %>
      <div class="mt-2">
        <%= form.label :email, class: "block text-sm font-medium leading-6 text-gray-900" %>
        <%= form.email_field :email, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
      </div>

      <div class="mt-2">
        <div class="flex items-center justify-between">
          <%= form.label :password, class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="text-sm">
            <%= link_to new_password_reset_path, class: "font-semibold text-indigo-600 hover:text-indigo-500" do %>
              Forgot password?
            <% end %>
          </div>
        </div>
        <%= form.password_field :password, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
      </div>

      <div>
        <%= form.submit "Sign in", class: "flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
      </div>
    <% end %>
    <p class="mt-10 text-center text-sm text-gray-500">
      Not a member?
      <%= link_to new_registration_path, class: "font-semibold leading-6 text-indigo-600 hover:text-indigo-500" do %>
        Sign up now to start bidding!
      <% end %>
    </p>
  </div>
</div>
